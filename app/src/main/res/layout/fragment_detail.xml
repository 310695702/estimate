<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/stv_switch_custom_theme"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        app:sDividerLineType="both"
        app:sLeftTextSize="10sp"
        app:sLeftTextString="使用点券"
        app:sRightViewType="switchBtn"
        app:sSwitchIsChecked="false"
        app:sThumbResource="@drawable/thumb"
        app:sTrackResource="@drawable/track" />

    <LinearLayout
        android:id="@+id/ll_edit1"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/et_basic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textSize="10sp"
            android:hint="输入购买套数..."
            app:met_autoValidate="true"
            app:met_clearButton="true"
            app:met_maxCharacters="5" />


        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/bt_disenable"
            style="@style/RoundButton.Auto"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="锁定" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit2"
        android:layout_below="@id/ll_edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/et_basic2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textSize="10sp"
            android:hint="输入金币比例，如50代表1:50"
            app:met_autoValidate="true"
            app:met_clearButton="true"
            app:met_maxCharacters="5" />


        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/bt_disenable2"
            style="@style/RoundButton.Auto"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="锁定" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit3"
        android:layout_below="@id/ll_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/et_basic3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textSize="10sp"
            android:hint="输入寄售行比例，如200代表100W需要200点券"
            app:met_autoValidate="true"
            app:met_clearButton="true"
            app:met_maxCharacters="5" />


        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/bt_disenable3"
            style="@style/RoundButton.Auto"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="锁定" />
    </LinearLayout>

    <TextView
        android:layout_below="@+id/ll_edit2"
        android:id="@+id/tv_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>